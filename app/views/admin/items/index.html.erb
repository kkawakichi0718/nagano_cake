<h4>商品一覧</h4>

<div class="row">
  	<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td><%= link_to item.name, admin_item_path(item.id) %></td>
					<td><%= item.price %></td>
					<td>ジャンル</td>
					<td>											
					    <% if item.is_sold == false %>
                           販売中
                        <% else %>
                           売り切れ
                        <% end %>
                    </td>
				</tr>
				<% end %>
			</tbody>
	</table>
</div>