<h4>注文履歴一覧</h4>
<div class="row">
    <table class="table table-striped", border="2">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
        <tr>
          <td>
          	<%= link_to admin_order_path(order) do %>
          	    <%= l order.created_at %>
          	<% end %>
          </td>
          <td>
          	<%= order.end_user.last_name %>
          	<%= order.end_user.first_name %>
          </td>
          <td>
            <%= order.end_user.cart_items.sum(:amount) %>
          </td>
          <td>
          	<%= order.status %>
          </td>
        </tr>
       <% end %>
      </tbody>
    </table>
</div>