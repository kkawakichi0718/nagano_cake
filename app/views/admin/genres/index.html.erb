<h1>ジャンル一覧</h1>

<div class="row"> 
  <%= form_for(@genre, url: { controller: :genres , action: :create }) do |f| %>
    <h4>ジャンル</h4>
    <%= f.text_field :name %>
    <label>
    	<%= f.radio_button :is_valid, "true" %>
    	有効
    </label>
    <label>
    	<%= f.radio_button :is_valid, "false" %>
    	無効
    </label>
    
    <%= f.submit '追加', class: "btn btn-info" %>
  <% end %>


  <div class="col-xs-4">
  	<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td><%= genre.is_valid %></td>
					<td>
					    <% if genre.is_valid == false %>
                           無効
                        <% else %>
                           有効
                        <% end %>
                    </td>
					<td>
						<%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %>
					</td>
				</tr>
				<% end %>
			</tbody>
	</table>
  </div>
</div>

