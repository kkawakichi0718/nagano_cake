<h1>ジャンル編集画面</h1>

<%= form_for(@genre, url: { controller: :genres , action: :update }) do |f| %>
    <h4>ジャンル</h4>
    <%= f.text_field :name %>
    <label>
    	<%= f.radio_button :is_valid, "true" %>
    	有効
    </label>
    <label>
    	<%= f.radio_button :is_valid, "false" %>
    	無効
    </label>
    
    <%= f.submit '変更を保存する', class: "btn btn-info" %>
<% end %>