<h3>商品一覧</h3>
<div class="row">		
	<% @items.each do |item| %>
	    <div class="col-md-3">
	    	<div>
  　　　　　　　　<%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
	    	</div>
	    	<div>
			  <%= link_to item.name, public_item_path(item) %>
		    </div>
		    <div>
			  ¥<%= item.taxed_price %>
		    </div>
		</div>
	<% end %>
</div>