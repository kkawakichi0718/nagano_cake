<h3>商品一覧</h3>
<div class="row">
	<tr>
	  <% @genres.each do |genre| %>
	    <% if genre.is_valid == true %>
	      <td>
	      	<%= link_to genre.name, public_genre_path(genre.id) %>
	      </td>
	    <% end %>
	  <% end %>
    </tr>
</div>
<div class="row">
	<% @items.each do |item| %>
	    <div class="col-md-3">
	    	<div>
  　　　　　　　　<%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
	    	</div>
	    	<div>
			    <%= link_to item.name, public_item_path(item) %>
		    </div>
		    <div>
			  ¥<%= item.taxed_price %>
		    </div>
		</div>
	<% end %>
</div>